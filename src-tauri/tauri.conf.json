{
  "$schema": "https://raw.githubusercontent.com/nicegui/tauri-schema/main/v2/tauri.conf.json",
  "productName": "ReadyNextOs Drive",
  "version": "0.1.0",
  "identifier": "com.readynextos.drive",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "ReadyNextOs Drive",
        "width": 400,
        "height": 600,
        "resizable": true,
        "visible": false,
        "center": true,
        "decorations": true
      }
    ],
    "trayIcon": {
      "id": "main-tray",
      "iconPath": "icons/tray-icon.png",
      "iconAsTemplate": true,
      "tooltip": "ReadyNextOs Drive"
    },
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "language": "pl-PL"
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.15"
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
